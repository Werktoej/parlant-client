# Parlant Chat Configuration

# Server URL for the Parlant API (REQUIRED)
# Examples:
#   - http://localhost:8800 (for local development)
VITE_SERVER_URL=http:localhost:8800

# Optional: Server Name
# Human-readable name for the server (shown in configuration modal)
VITE_SERVER_NAME=Development Server

# Agent ID for the chatbot (REQUIRED)
# This should be the ID of your configured agent in Parlant
VITE_AGENT_ID=your-agent-id-here

# Optional: Agent Name
# Human-readable name for the agent (defaults to "Assistant" if not set)
VITE_AGENT_NAME=Virtual Assistant

# Optional: Default Language
# Supported: 'da' (Danish) or 'en' (English)
VITE_LANGUAGE=en

# Optional: Enable Logging
# Set to 'true' to enable console logging for development/debugging
VITE_ENABLE_LOGGING=false

# Optional: Initial Chat Mode
# Options: 'minimized', 'popup', 'fullscreen'
VITE_INITIAL_MODE=popup

# Optional: Auto-start Session
# Set to 'true' to automatically create a session when the chat loads
VITE_AUTO_START_SESSION=true

# Optional: Show Attribution
# Set to 'false' to hide "Powered by Parlant" text (for white-label)
VITE_SHOW_ATTRIBUTION=true

# Optional: Polling Configuration (in milliseconds)
# Adjust these values to optimize polling behavior
# VITE_POLLING_ACTIVE=500
# VITE_POLLING_NORMAL=1000
# VITE_POLLING_IDLE=3000
# VITE_POLLING_VERY_IDLE=5000
# VITE_POLLING_IDLE_THRESHOLD=10000
# VITE_POLLING_VERY_IDLE_THRESHOLD=30000
